{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task Index Schema v3.1",
  "type": "object",
  "properties": {
    "version": { "type": "string", "const": "v3.1" },
    "owner": { "type": "string" },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^T-[0-9]{4}-[0-9]{2}-[0-9]{2}-[0-9]{2}$" },
          "title": { "type": "string", "minLength": 3 },
          "phase": { "type": "string" },
          "type": { "type": "string", "enum": ["recurring","one_time"] },
          "blocking": { "type": "boolean", "default": true },
          "status": { "type": "string", "enum": ["open","in_progress","done","skipped"] },
          "created_at": { "type": "string", "format": "date-time" },
          "due": { "type": "string", "format": "date-time" },
          "interval_days": { "type": "integer", "minimum": 1 },
          "rrule": { "type": "string" },
          "last_run": { "type": "string", "format": "date-time" },
          "next_due": { "type": "string", "format": "date-time" },
          "owner": { "type": "string" },
          "priority": { "type": "string", "enum": ["P0","P1","P2"], "default": "P1" },
          "depends_on": {
            "type": "array",
            "items": { "type": "string", "pattern": "^T-[0-9]{4}-[0-9]{2}-[0-9]{2}-[0-9]{2}$" }
          },
          "evidence_required": { "type": "boolean", "default": false },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["id","title","phase","type","status","owner","created_at","blocking"]
      }
    }
  },
  "required": ["version","owner","tasks"],
  "allOf": [
    {
      "description": "Recurring tasks m√ºssen interval_days oder rrule besitzen",
      "if": { "properties": { "tasks": { "items": { "properties": { "type": { "const": "recurring" } } } } } },
      "then": { "properties": { "tasks": { "items": { "anyOf": [
        { "required": ["interval_days"] },
        { "required": ["rrule"] }
      ] } } } }
    }
  ]
}
