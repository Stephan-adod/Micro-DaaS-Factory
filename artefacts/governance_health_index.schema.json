{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Health Index Schema v3.1-refine-1",
  "type": "object",
  "properties": {
    "version": { "type": "string", "const": "v3.1-refine-1" },
    "health_formula": {
      "type": "string",
      "const": "(0.4*mROI + 0.3*Uplift + 0.2*(1-ΔMAPE) + 0.1*Freshness)"
    },
    "review_window_days": { "type": "integer", "minimum": 7 },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "service": { "type": "string" },
          "mROI": { "type": "number" },
          "Uplift": { "type": "number" },
          "ΔMAPE": { "type": "number" },
          "Freshness": { "type": "number" },
          "Health": { "type": "number" },
          "commit_hash": { "type": "string" }
        },
        "required": ["timestamp", "service", "mROI", "Uplift", "Health"]
      }
    }
  },
  "required": ["version", "entries", "health_formula"]
}
